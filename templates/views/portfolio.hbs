<div class="jumbotron portfolio-hero text-center" style="
    background: url(
      {{#each homepage}}
        {{#if @first}}
          {{#if this.mainImage}}
            {{this.mainImage.image.url}}
          {{/if}}
        {{/if}}
      {{/each}}
    ) no-repeat center bottom;
    background-size: cover;
    <!-- background-attachment: fixed; -->
  ">
  <div class="overlay">
    <div class="container">
      <div class="row">
        <div class="col-sm-12">
          <h1>
            {{#each homepage}}
              {{#if @first}}
                {{this.title}}.
                {{#if this.role}}
                  <span class="strong">{{this.role}}</span>.
                {{/if}}
              {{/if}}
              {{#if this.description}}
                <p>{{this.description}}</p>
              {{/if}}
              {{#if this.email}}
                <p class="call-to-action"><a class="btn btn-default btn-lg" href="mailto:{{this.email}}?Subject=Hello">Contact Me</a></p>
              {{/if}}
            {{/each}}
          </h1>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- Projects -->
<div class="container" id="projects">
  <div class="row">
    <div class="col-sm-12 text-center">
      <h2>Projects</h2>
    </div>
    <!-- filters -->
    {{> project_filters filters}}
    <!-- projects -->
    <div class="col-sm-12">
      <div id="project-list" class="row">
        {{#each project}}
          {{> project_card this}}
        {{/each}}
      </div>
    </div>
  </div>
</div>
